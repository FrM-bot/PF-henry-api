generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(uuid())
  googleID    String?   @unique
  name        String
  lastname    String
  dni         String    @default("")
  email       String    @unique
  username    String    @unique
  password    String
  profilepic  String
  Validate    Boolean   @default(true)
  accountsIDs String[]
  accounts    Account[]
  Fav         Fav[]
}

model Fav {
  id       String @id @default(uuid())
  userID   String
  friendID String
  User     User   @relation(fields: [userID], references: [id])
}

model Account {
  id            String     @id @default(uuid())
  cvu           String     @unique
  balance       Float      @default(0.0)
  usersIDs      String
  typeOfAccount String     @default("origin")
  currencieID   String
  currencies    Currency   @relation(fields: [currencieID], references: [id])
  users         User       @relation(fields: [usersIDs], references: [id])
  movements     Movement[]
}

model Currency {
  id        String     @id @default(uuid())
  name      String     @unique
  price     Float      @default(0.0)
  accounts  Account[]
  movements Movement[]
}

model Movement {
  id            String    @id @default(uuid())
  date          DateTime  @default(now())
  amount        Float     @default(0.0)
  receipt       Boolean?  @default(false)
  receiptCode   String?   @default("No receipt")
  comment       String?   
  accountsIDs   String
  operationsIDs String
  categoriesIDs String
  destiny       String    @default("Without destiny")
  sentBy        String    @default("Not sent")
  currencyId    String
  accounts      Account   @relation(fields: [accountsIDs], references: [id])
  categories    Category  @relation(fields: [categoriesIDs], references: [id])
  currencies    Currency  @relation(fields: [currencyId], references: [id])
  operations    Operation @relation(fields: [operationsIDs], references: [id])
}

model Category {
  id           String     @id @default(uuid())
  name         String     @unique
  movementsIDs String[]
  movements    Movement[]
}

model Operation {
  id           String     @id @default(uuid())
  name         String     @unique
  movementsIDs String[]
  movements    Movement[]
}
